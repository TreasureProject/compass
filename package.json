{
  "name": "web3-frontend-template",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "npm run codegen && remix build",
    "deploy": "fly deploy --remote-only",
    "dev:remix": "remix dev",
    "dev": "npm-run-all --parallel dev:*",
    "start": "remix-serve build",
    "typecheck": "tsc",
    "codegen": "node -r dotenv/config node_modules/.bin/gql-gen",
    "dev:codegen": "node -r dotenv/config node_modules/.bin/gql-gen --watch",
    "lint": "prettier --write 'app/**/{*.ts,*.tsx}' && eslint --fix --no-error-on-unmatched-pattern 'app/**/{*.ts,*.tsx}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^16.0.3",
    "@contentful/rich-text-types": "^16.0.3",
    "@radix-ui/react-dialog": "^1.0.3",
    "@radix-ui/react-dropdown-menu": "^2.0.4",
    "@remix-run/node": "^1.14.1",
    "@remix-run/react": "^1.14.1",
    "@remix-run/serve": "^1.14.1",
    "clsx": "^1.2.1",
    "cmdk": "^0.2.0",
    "date-fns": "^2.29.3",
    "framer-motion": "^10.3.1",
    "graphql": "^16.6.0",
    "graphql-request": "5.1.0",
    "graphql-tag": "^2.12.6",
    "isbot": "^3.6.6",
    "lucide-react": "^0.125.0",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-wrap-balancer": "^0.4.0",
    "remix-utils": "^6.0.0",
    "sonner": "^0.2.0",
    "tailwind-merge": "^1.10.0",
    "tailwindcss-animate": "^1.0.5",
    "tiny-invariant": "^1.3.1",
    "untypeable": "^0.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.2.2",
    "@graphql-codegen/typescript": "^3.0.2",
    "@graphql-codegen/typescript-graphql-request": "^4.5.8",
    "@graphql-codegen/typescript-operations": "^3.0.2",
    "@remix-run/dev": "^1.14.1",
    "@remix-run/eslint-config": "^1.14.1",
    "@remix-run/server-runtime": "^1.14.1",
    "@tailwindcss/typography": "^0.5.9",
    "@treasure-project/tailwind-config": "^1.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "app/**/{*.ts,*.tsx}": "npm run lint"
  }
}
